<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- EditText for entering artist name -->
    <EditText
        android:id="@+id/artistEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text" />

    <!-- EditText for entering song title -->
    <EditText
        android:id="@+id/titleEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text" />

    <!-- Button to fetch lyrics -->
    <Button
        android:id="@+id/getLyricsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Lyrics" />

    <!-- TextView to display the lyrics -->
    <TextView
        android:id="@+id/lyricsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:text="Lyrics will be displayed here"
        android:textSize="16sp" />
</LinearLayout>